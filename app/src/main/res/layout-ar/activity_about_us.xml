<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutUsActivity">

    <LinearLayout
        android:id="@+id/toolbar_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009FE3"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d15"
                android:background="@null"
                android:src="@drawable/ic_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/call_us"
                android:textColor="@color/app_bg"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activity.AboutUsActivity">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_splash_top_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginRight="@dimen/dt16"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/dt18"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginTop="@dimen/dt10"
                android:layout_marginRight="@dimen/dt16"
                android:text="@string/about_us_description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dt18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginTop="@dimen/dt10"
                android:layout_marginRight="@dimen/dt16"
                android:text="@string/objectives"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dt18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginTop="@dimen/dt10"
                android:layout_marginRight="@dimen/dt16"
                android:text="@string/objective_one"
                android:textColor="@color/black"
                android:textSize="@dimen/dt18" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginTop="@dimen/dt10"
                android:layout_marginRight="@dimen/dt16"
                android:text="@string/objective_two"
                android:textColor="@color/black"
                android:textSize="@dimen/dt18" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dt16"
                android:layout_marginTop="@dimen/dt10"
                android:layout_marginRight="@dimen/dt16"
                android:text="@string/objective_three"
                android:textColor="@color/black"
                android:textSize="@dimen/dt18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_whatsapp_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dt16"
                        android:layout_marginTop="@dimen/dt10"
                        android:layout_marginRight="@dimen/dt16"
                        android:gravity="center"
                        android:text="@string/complains"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dt18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dt16"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/dt16"
                        android:drawableRight="@drawable/ic_whatsapp"
                        android:gravity="center"
                        android:text="+966591114156"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dt14"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_whatsapp_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dt16"
                        android:layout_marginTop="@dimen/dt10"
                        android:layout_marginRight="@dimen/dt16"
                        android:gravity="center"
                        android:text="@string/advertisement"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dt18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dt16"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/dt16"
                        android:drawableRight="@drawable/ic_whatsapp"
                        android:gravity="center"
                        android:text="+966551180030"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dt14"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ll_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/fb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_telegram"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_tiktok" />

                <ImageView
                    android:id="@+id/ll_insta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ig"
                    app:layout_constraintBottom_toTopOf="@id/ll_telegram"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_tiktok"
                    app:layout_constraintTop_toBottomOf="@+id/ll_snap" />


                <ImageView
                    android:id="@+id/ll_tiktok"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/tt"
                    app:layout_constraintBottom_toTopOf="@id/ll_facebook"
                    app:layout_constraintEnd_toStartOf="@id/ll_insta"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_twitter" />

                <ImageView
                    android:id="@+id/ll_snap"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/sn"
                    app:layout_constraintBottom_toTopOf="@id/ll_insta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_twitter"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ll_twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/tw"
                    app:layout_constraintBottom_toTopOf="@id/ll_tiktok"
                    app:layout_constraintEnd_toStartOf="@id/ll_snap"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ll_telegram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/tg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_facebook"
                    app:layout_constraintTop_toBottomOf="@id/ll_insta" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>