<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tvtitle"
                android:layout_marginTop="@dimen/d16"
                android:textColor="@color/white"
                fontPath="font/pn_semibold.otf"
                tools:ignore="MissingPrefix"
                android:textSize="1sp"
                android:text="Alert"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/d3"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginBottom="@dimen/d16"
                android:textColor="@color/black"
                fontPath="font/pn_regular.otf"
                tools:ignore="MissingPrefix"
                android:id="@+id/dialogMessgaeTextview"
                android:textSize="@dimen/dt16"
                android:text="Signup Successfull"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/light_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حسنا"
                android:id="@+id/btnOk"
                android:padding="10dp"
                android:background="@drawable/button_click"
                android:textColor="@color/black"
                fontPath="font/oswald_regular.ttf"
                tools:ignore="MissingPrefix"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>